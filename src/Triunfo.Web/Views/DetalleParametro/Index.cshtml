@model IEnumerable<Triunfo.Core.Domain.DetalleParametro>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Manejo de los detalles de parametro</h1>

<p style="text-align:right">
    <a class="btn btn-success" asp-action="Create">Create New</a>
    <a class="btn btn-secondary" style="float:left" href="../Home/MenuListar"> << Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdParametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdParametroNavigation.DescripcionParametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorNumDetParametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorStringDetParametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescripcionDetParametro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoDetParametro)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdParametroNavigation.IdParametro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdParametroNavigation.DescripcionParametro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorNumDetParametro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorStringDetParametro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionDetParametro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EstadoDetParametro)
            </td>
            <td>

                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdDetParametro">Details</a> |
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdDetParametro">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdDetParametro">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
