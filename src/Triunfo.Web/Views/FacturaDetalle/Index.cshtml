@model IEnumerable<Triunfo.Core.Domain.FacturaDetalle>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Manejo para los Detalles de Factura</h1>

<p style="text-align:right">
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CantidadProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorUnitario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescuentoNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdFacturaNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductoNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CantidadProducto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorUnitario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DescuentoNavigation.IdDetParametro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdFacturaNavigation.IdFactura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
                </td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdFacturaDet">Details</a> |
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdFacturaDet">Edit</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdFacturaDet">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
