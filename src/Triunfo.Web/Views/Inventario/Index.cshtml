@model IEnumerable<Triunfo.Core.Domain.Inventario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Manejo de Inventario</h1>

<p style="text-align:right">
    <a class="btn btn-success"asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProductoNavigation.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProveedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProveedorNavigation.RazonSocial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioLlegada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stock)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProveedorNavigation.IdPersona)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProveedorNavigation.RazonSocial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioLlegada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stock)
            </td>

            <td>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdInventario">Details</a> |
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdInventario">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdInventario">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
