@model IEnumerable<Triunfo.Core.Domain.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">Manejo de Productos</h1>

<p style="text-align:right">
    <a class="btn btn-success" asp-action="Create">Create New</a>
    <a class="btn btn-secondary" style="float:left" href="../Home/MenuListar"> << Back</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NombreProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrecioSalidaPro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IvaProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaProducto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioSalidaPro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IvaProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoriaProductoNavigation.DescripcionDetParametro)
            </td>
            <td>
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.IdProducto">Details</a> |
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdProducto">Edit</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdProducto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
