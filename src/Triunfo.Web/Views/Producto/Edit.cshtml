@model Triunfo.Core.Domain.Producto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProducto" />
            <div class="form-group">
                <label asp-for="NombreProducto" class="control-label"></label>
                <input asp-for="NombreProducto" class="form-control" />
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioSalidaPro" class="control-label"></label>
                <input asp-for="PrecioSalidaPro" class="form-control" />
                <span asp-validation-for="PrecioSalidaPro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IvaProducto" class="control-label"></label>
                <input asp-for="IvaProducto" class="form-control" />
                <span asp-validation-for="IvaProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaProducto" class="control-label"></label>
                <select asp-for="CategoriaProducto" class="form-control" asp-items="ViewBag.CategoriaProducto"></select>
                <span asp-validation-for="CategoriaProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" /> |
                <a class="btn btn-success" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
